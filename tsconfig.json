{
  "compilerOptions": {
    "target": "es5",                         
    "lib": ["dom", "es2017"],                
    "allowJs": true,                         
    "skipLibCheck": true,                    
    "esModuleInterop": true,                 
    "moduleResolution": "node",              
    "jsx": "react",                          
    "strict": true,                          
    "isolatedModules": true,                 
    "noEmit": true,                          
    "resolveJsonModule": true,               
    "allowSyntheticDefaultImports": true,    
    "typeRoots": ["node_modules/@types"],    // Ensures types from node_modules are included
    "types": ["babel__template", "node"]     // Include specific types explicitly
  },
  "exclude": ["node_modules"],
  "include": ["./src/**/*", "./App.tsx", "./pages/**/*.tsx"]
}
